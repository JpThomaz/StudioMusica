<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Lista de Musicas</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a class="btn btn-primary" asp-action="Create">Adicionar nova Musica</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 15%;">@Html.DisplayNameFor(model => model.Nome)</th>
                                        <th style="width: 15%;"> @Html.DisplayNameFor(model => model.Autor)</th>
                                        <th style="width: 10%;">@Html.DisplayNameFor(model => model.DataLancamento)</th>
                                        <th style="width: 5%;">@Html.DisplayNameFor(model => model.Volume)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nome)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Autor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataLancamento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Volume)
                                            </td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="Editar" data-original-title="Editar" asp-action="Edit" asp-route-id="@item.FaixaID">E</a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="Visualizar" data-original-title="Visualizar" asp-action="Details" asp-route-id="@item.FaixaID">V</a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="Deletar" data-original-title="Deletar" asp-action="Delete" asp-route-id="@item.FaixaID">X</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>