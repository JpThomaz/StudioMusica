@model IEnumerable<StudioMusica.Models.Album>

@{
    ViewData["Title"] = "IndexAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content  -->
<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Lista de Albuns</h4>
                        </div>
                        <div class="iq-card-header-toolbar d-flex align-items-center">
                            <a class="btn btn-primary" asp-action="CreateAlbum" >Adicionar novo Album</a>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="table-responsive">
                            <table class="data-tables table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width: 5%;">Foto</th>
                                        <th style="width: 15%;">@Html.DisplayNameFor(model => model.Nome)</th>
                                        <th style="width: 15%;">@Html.DisplayNameFor(model => model.DataAlbum)</th>
                                        <th style="width: 10%;">@Html.DisplayNameFor(model => model.Formato)</th>
                                        <th style="width: 15%;">@Html.DisplayNameFor(model => model.Genero)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><img src="~/images/dashboard/popular-hindi-song/06.png" class="img-fluid avatar-50 rounded" alt=""></td>
                                            <td> @Html.DisplayFor(modelItem => item.Nome)</td>
                                            <td> @Html.DisplayFor(modelItem => item.DataAlbum)</td>
                                            <td> @Html.DisplayFor(modelItem => item.Formato)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="Editar" data-original-title="Editar" asp-action="Edit" asp-route-id="@item.AlbumID" >E</a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="Visualizar" data-original-title="Visualizar" asp-action="Details" asp-route-id="@item.AlbumID">V</a>
                                                    <a class="bg-primary" data-toggle="tooltip" data-placement="top" title="Deletar" data-original-title="Deletar" asp-action="Delete" asp-route-id="@item.AlbumID">X</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
